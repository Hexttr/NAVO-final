<?xml version="1.0"?>
<!-- NAVO RADIO — Icecast config. Port 8001 (backend=8000). Mount /live. -->
<icecast>
    <location>NAVO RADIO</location>
    <admin>navoradio@localhost</admin>
    <hostname>localhost</hostname>

    <limits>
        <clients>100</clients>
        <sources>2</sources>
        <queue-size>524288</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>10</source-timeout>
        <burst-size>65535</burst-size>
    </limits>

    <authentication>
        <source-password>navo-icecast-source-2024</source-password>
        <relay-password>navo-icecast-source-2024</relay-password>
        <admin-user>admin</admin-user>
        <admin-password>navo-admin-2024</admin-password>
    </authentication>

    <listen-socket>
        <port>8001</port>
        <bind-address>127.0.0.1</bind-address>
    </listen-socket>

    <http-headers>
        <header name="Access-Control-Allow-Origin" value="*" />
    </http-headers>

    <paths>
        <!-- Логи в папку проекта (Program Files защищён от записи) -->
        <logdir>c:/Users/User/Desktop/Radio7/dev/icecast_logs</logdir>
        <webroot>C:/Program Files/Icecast/web</webroot>
        <adminroot>C:/Program Files/Icecast/admin</adminroot>
        <alias source="/" destination="/status.xsl"/>
    </paths>

    <logging>
        <accesslog>access.log</accesslog>
        <errorlog>error.log</errorlog>
        <loglevel>warning</loglevel>
    </logging>

    <security>
        <prng-seed type="static">NAVO-RADIO-icecast-2024-prng-seed-min-64-chars-required-for-icecast</prng-seed>
    </security>
</icecast>
