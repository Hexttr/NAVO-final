<!-- NAVO RADIO - Icecast config. Порт 8001, mount /live -->
<icecast>
    <location>NAVO RADIO</location>
    <admin>admin@navoradio.com</admin>
    <limits>
        <clients>500</clients>
        <sources>2</sources>
        <threadpool>5</threadpool>
        <queue-size>524288</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>30</source-timeout>
    </limits>
    <authentication>
        <source-password>navo-icecast-source-2024</source-password>
        <relay-password>navo-icecast-relay</relay-password>
        <admin-user>admin</admin-user>
        <admin-password>navo-icecast-admin</admin-password>
    </authentication>
    <hostname>navoradio.com</hostname>
    <listen-socket>
        <port>8001</port>
    </listen-socket>
    <paths>
        <basedir>/usr/share/icecast2</basedir>
        <logdir>/var/log/icecast2</logdir>
        <webroot>/usr/share/icecast2/web</webroot>
        <adminroot>/usr/share/icecast2/admin</adminroot>
        <pidfile>/var/run/icecast2/icecast-navoradio.pid</pidfile>
    </paths>
    <logging>
        <accesslog>access.log</accesslog>
        <errorlog>error.log</errorlog>
        <loglevel>2</loglevel>
    </logging>
</icecast>
